{
  "name": "invoice",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/simple-app.js",
    "dev": "ts-node src/simple-app.ts",
    "build": "npm run client:build && tsc src/simple-app.ts --outDir dist --target ES2020 --module commonjs --esModuleInterop true --allowSyntheticDefaultImports true --strict true --skipLibCheck true",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm install && npm run build",
    "full:dev": "concurrently \"npm run dev\" \"npm run client:dev\"",
    "seed": "ts-node src/scripts/seedData.ts",
    "test": "echo \"Tests coming soon\"",
    "railway:build": "npm run build",
    "railway:start": "npm start"
  },
  "keywords": [],
